<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true">



        <ImageView
            android:id="@+id/rlogin_im_leftarrow"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/arrow" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quicksandbold"
            android:text="@string/subscrip"
            android:letterSpacing=".01"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorwhite"
            android:textSize="20sp"
            />


    </RelativeLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rr1"
        android:scrollbars="none"
        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rr"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:elevation="2dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:layout_alignParentLeft="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/pro_rl"
                    >



                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/logo"/>





                </RelativeLayout>









            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/setting_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/colorwhite"
                app:cardCornerRadius="6dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="200dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginBottom="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"

                            >

                            <ImageView
                                android:id="@+id/iv_sub"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_alignParentLeft="true"
                                app:srcCompat="@drawable/ic_message_ico" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/quicksandmedium"
                                    android:text="$250.00/"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="25sp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:layout_gravity="center|bottom"
                                    android:fontFamily="@font/quicksandbold"
                                    android:text="Monthly"
                                    android:textColor="@color/colorDarkgray"
                                    android:textSize="15sp"
                                    />



                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/quicksandbold"
                                android:text="@string/basic"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/quicksandregular"
                                android:text="@string/basictext"
                                android:textColor="#5d5d5d"
                                android:textSize="15sp"
                                />

                            <Button

                                android:id="@+id/logbtn_signin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/subscrib"
                                android:textSize="16dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginBottom="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/quicksandmedium"
                                android:background="@drawable/btnback"
                                android:textColor="@color/colorwhite"
                                android:textAllCaps="false"/>


                        </LinearLayout>



                    </LinearLayout>

                </ScrollView>


            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>


